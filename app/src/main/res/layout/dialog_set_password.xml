<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
    <TextView
        android:id="@+id/tv_setPassword"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="设置密码"
        android:gravity="center"
        android:textSize="18sp"
        android:background="@drawable/blue_bkg"
        />
    <EditText
        android:id="@+id/et_inputPasswordFirst"
        android:layout_below="@id/tv_setPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:password="true"
        android:hint="请输入密码"
        />
    <EditText
        android:id="@+id/et_inputPasswordSecond"
        android:layout_below="@id/et_inputPasswordFirst"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:password="true"
        android:hint="请再次输入密码"
        />
    <LinearLayout
        android:layout_below="@id/et_inputPasswordSecond"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btn_confirm"
            android:background="@drawable/home_gv_select"
            android:layout_width="0dp"
            android:text="确认"
            android:layout_weight="1"
            android:layout_height="45dp" />

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="0dp"
            android:text="取消"
            android:layout_weight="1"
            android:background="@drawable/home_gv_select"
            android:layout_height="45dp" />
    </LinearLayout>
</RelativeLayout>