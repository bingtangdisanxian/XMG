<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <TextView
        style="@style/title_TextView"
        android:text="3.设置安全号码"
        />

    <TextView
        android:layout_marginLeft="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="如果SIM卡发生改变:\n就会给安全号码发送报警短信"
        />

    <EditText
        android:id="@+id/et_enter_safeNumber"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_margin="5dp"
        android:inputType="number"
        android:hint="请输入安全号码"
        android:background="#ece2e2"
        />

    <Button
        android:id="@+id/btn_choose_safeNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dg_btn_confirm_normal"
        android:text="选择安全号码"
        android:textColor="#fff"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/presence_offline"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/presence_offline"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/presence_online"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/presence_offline"
            />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/step_3"
            />

        <ImageView
            android:onClick="next"
            style="@style/setup_toNext"/>

        <ImageView
            android:onClick="pre"
            style="@style/setup_toPre"/>
    </RelativeLayout>

</LinearLayout>